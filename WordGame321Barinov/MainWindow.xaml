<Window x:Class="WordGame321Barinov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordGame321Barinov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.jpg" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <Label Content="Words Game" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="23"/>
        <TextBox Width="400" Height="120" Foreground="White" HorizontalAlignment="Center"  VerticalAlignment="Top" Margin="60" FontSize="19" IsReadOnly="True" Opacity="0"></TextBox>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="Отправить" Background="White" Width="100" Height="23"/>
            <Button Content="Пропустить вопрос" Background="White" Width="120" Height="23" Margin="23"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="190" Width="650">
            
        </StackPanel>
    </Grid>
</Window>
